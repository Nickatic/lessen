<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>



<div class="overall-container">
  <div class="row">
    <div class="col-md user-profile">
      <div class="avatar-user-show text-center">
        <% if current_user.photo_user.present? %>
          <% avatar =  current_user.photo_user%>
          <% else %>
          <% avatar = image_path("Ryan.jpg") %>
        <% end %>
        <%= cl_image_tag(avatar, class:"avatar-bordered") %>
      </div>
      <div class="details-user-show space-inside">
      <h5>
        <h3><%= current_user.first_name %> <%= @current_user.last_name %></h3>
      </h5>
      <p><%= current_user.email %></p>
      <%= link_to "Edit profile", edit_user_path(current_user), class:"btn-lessen" %>
      </div>
    </div>
  </div>
</div>
