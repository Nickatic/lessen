<div class="participations-banner">
  <div class="participations-banner-content">
    <h1>Bienvenue <%=current_user.first_name%> !</h1>
  </div>
</div>
<div class="container">
  <div class="row welcome-my-lessons">
    <h3><em class="welcome-welldone" style="color: #8A3231;"><strong>Bravo - tu t'es inscrit à <%=current_user.participations.count %> leçons!</strong></em></h3>
  </div>
  <br>
  <div class="bordure"></div>
  <div class="row">
    <div class="upcoming-classes-title" style="color: #EA8C55">
      <h3><strong>Mes leçons à venir</strong></h3>
    </div>
  </div>
  <div class="row upcoming-classes">
    <% is_none = true %>
    <% if current_user.participations.count < 5 %>
      <%current_user.participations.each do |participation|%>
        <% if Date.today <= participation.lesson.date %>
          <% if  Date.today == participation.lesson.date %>
            <% if participation.lesson.starts_at.split(":")[0].to_i >= Time.now.hour %>
              <div class="cards-without-carousel">
                <%= render "shared/upcoming-participation-lesson-class", lesson: participation.lesson, participation: participation %>
              </div>
              <% is_none = false %>
            <% end %>
          <% else %>
            <div class="cards-without-carousel">
              <%= render "shared/upcoming-participation-lesson-class", lesson: participation.lesson, participation: participation %>
            </div>
            <% is_none = false %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <div class="carousel-index">
        <%current_user.participations.each do |participation|%>
         <!--  <% lesson = participation.lesson %> -->
          <% if Date.today <= participation.lesson.date %>
            <% if  Date.today == participation.lesson.date %>
              <% if participation.lesson.starts_at.split(":")[0].to_i >= Time.now.hour %>
                <div class="cards-without-carousel">
                  <%= render "shared/upcoming-participation-lesson-class", lesson: participation.lesson, participation: participation %>
                </div>
                <% is_none = false %>
              <% end %>
            <% else %>
              <div class="cards-without-carousel">
                <%= render "shared/upcoming-participation-lesson-class", lesson: participation.lesson, participation: participation %>
              </div>
              <% is_none = false %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <% if  is_none %>
      <h4 class="no-lesson-upcoming">Tu n'as pas de leçons à venir</h4>
    <% end %>
  </div>



   <div class="row past-classes-header">
    <div class="past-classes-title" style="color: #EA8C55">
      <h3><strong>Mes leçons précédentes</strong></h3>
    </div>
  </div>

  <div class="row past-classes-row-logic">
  <% is_none = true %>
  <% if current_user.participations.count < 5 %>
    <%current_user.participations.each do |participation|%>
      <% if Date.today >= participation.lesson.date %>
        <% if  Date.today == participation.lesson.date %>
          <% if participation.lesson.starts_at.split(":")[0].to_i < Time.now.hour %>
            <div class="cards-without-carousel">
              <%= render "shared/past-participation-lesson-class", lesson: participation.lesson, participation: participation %>
            </div>
            <% is_none = false %>
          <% end %>
        <% else %>
          <div class="cards-without-carousel">
            <%= render "shared/past-participation-lesson-class", lesson: participation.lesson, participation: participation %>
          </div>
          <% is_none = false %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <div class="carousel-index">
      <%current_user.participations.each do |participation|%>
        <% if Date.today >= participation.lesson.date %>
          <% if  Date.today == participation.lesson.date %>
            <% if participation.lesson.starts_at.split(":")[0].to_i < Time.now.hour %>
              <div class="cards-without-carousel">
                <%= render "shared/past-participation-lesson-class", lesson: participation.lesson, participation: participation %>
              </div>
              <% is_none = false %>
            <% end %>
          <% else %>
            <div class="cards-without-carousel">
              <%= render "shared/past-participation-lesson-class", lesson: participation.lesson, participation: participation %>
            </div>
            <% is_none = false %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% if  is_none %>
    <h4>Tu n'as pas encore pris de leçons</h4>
  <% end %>
  </div>
</div>

