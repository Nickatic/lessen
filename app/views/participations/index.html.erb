<div class="cards-container">
  <div class="row welcome-my-lessons">
    <h2>Bienvenue <%=current_user.first_name%> !</h2>
  </div>

  <div class="row upcoming-classes-title">
    <h3>Mes leçons à venir</h3>
  </div>

  <div class="row">
    <% is_none = true %>
    <%current_user.participations.each do |participation|%>
      <% if Date.today <= participation.lesson.date %>
        <%= render "shared/card", lesson: participation.lesson %>
        <% is_none = false %>
      <% end %>
    <% end %>
    <% if  is_none %>
      <h4>Pas de leçons à venir</h4>
    <% end %>
  </div>

  <div class="bordure"></div>

  <div class="row past-classes-title">
    <h3>Mes lessons précédentes</h3>
  </div>


  <div class="row past-classes-row-logic">
  <% is_none = true %>
  <% if current_user.participations.count < 5 %>
    <%current_user.participations.each do |participation|%>
      <% if Date.today > participation.lesson.date %>
        <div class="cards-without-carousel">
          <%= render "shared/card", lesson: participation.lesson %>
        </div>
        <% is_none = false %>
      <% end %>
    <% end %>
  <% else %>
    <div class="carousel-index">
      <%current_user.participations.each do |participation|%>
        <% lesson = participation.lesson %>
        <% if Date.today > participation.lesson.date %>
          <div class="cards-without-carousel">
            <%= render "shared/card", lesson: participation.lesson %>
          </div>
          <% is_none = false %>
        <% end %>

      <% end %>
    </div>
  <% end %>
  <% if  is_none %>
    <h4>Allez ! Au boulot</h4>
  <% end %>
  </div>
</div>


